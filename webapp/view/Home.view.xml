<mvc:View xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f" controllerName="ag.agasown.controller.Home">
	<Page id="home">
		<customHeader>
			<core:Fragment fragmentName="ag.agasown.view.fragment.Header" type="XML" />
		</customHeader>
		<content>
			<core:Fragment fragmentName="ag.agasown.view.fragment.Carousel" type="XML" />
			<Panel id="panelCategory" backgroundDesign="Transparent" class="sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title text="Beliebte Kategorien" level="H3" titleStyle="H2" class="sapUiMediumMarginTopBottom"/>
					</Toolbar>
				</headerToolbar>
				<f:GridList id="gridCategory" mode="SingleSelectMaster" items="{
                        path: 'oDataCategory>/',
                        filters: [{path: 'parent', operator: 'EQ', value1: null}],
                        sorter: {path: 'id'}
                    }" class="sapUiResponsiveContentPadding">
					<f:customLayout>
						<grid:GridBasicLayout gridTemplateColumns="repeat(auto-fit, minmax(16rem, 1fr))" gridGap="0.5rem" />
					</f:customLayout>
					<f:GridListItem >
						<VBox height="100%">
							<Image src="{path: 'oDataCategory>picture',
											formatter : '.formatter.jsonPictureUrl'
											}" width="100%" class="imageDisplayBlock" press="onCategoryLinkPress"/>
							<HBox height="100%" class="sapUiSmallMargin" justifyContent="Center" alignItems="Center" visible="{= ${onlyImage} ? false : true }">
								<VBox>
									<Link text="{oDataCategory>category_name}" press="onCategoryLinkPress"/>
								</VBox>
							</HBox>
						</VBox>
					</f:GridListItem>
				</f:GridList>
			</Panel>
			<Panel>
				<headerToolbar>
					<Toolbar>
						<Title text="Shop Banner" level="H3" titleStyle="H2" class="sapUiMediumMarginTopBottom"/>
					</Toolbar>
				</headerToolbar>
				<core:Fragment fragmentName="ag.agasown.view.fragment.ShopCarousel" type="XML" />
			</Panel>

			<Panel id="panelPromoted" backgroundDesign="Transparent" class="sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title text="Promoted Item" level="H3" titleStyle="H2" class="sapUiMediumMarginTopBottom"/>
					</Toolbar>
				</headerToolbar>
				<Carousel height="auto" pages="{path: 'oDataProducts>/',
                        filters: [{path: 'ranking', operator: 'EQ', value1: '1'}],
                        sorter: {path: 'id'}}">
					<customLayout>
						<CarouselLayout visiblePagesCount="{view>/pagesCount}" />
					</customLayout>

					<VBox height="100%">
						<Image src="{path: 'oDataProducts>picture',formatter : '.formatter.jsonPictureUrl'}" 
						width="100%" class="imageDisplayBlock" press="onProductItemPress"/>
						<HBox height="100%" class="sapUiSmallMargin" alignItems="Center">
							<VBox>
								<Title text="{oDataProducts>product_name}" wrapping="true" />
								<HBox justifyContent="SpaceBetween" alignItems="Baseline">
									<Button tooltip="{i18n>addToCart}" press=".onAddToCart" icon="sap-icon://cart-3" type="Emphasized"/>
									<ObjectListItem class="welcomePrice" number="{
											parts:[
												{path:'oDataProducts>unit_price'},
												{path:'view>/Currency'}
											],
											type:'sap.ui.model.type.Currency',
											formatOptions:{showMeasure: false}
										}" numberUnit="{view>/Currency}">
									</ObjectListItem>
								</HBox>
							</VBox>
						</HBox>
					</VBox>
				</Carousel>
			</Panel>

			<Panel>
				<headerToolbar>
					<Toolbar>
						<Title text="Social Banner" level="H3" titleStyle="H2" class="sapUiMediumMarginTopBottom"/>
					</Toolbar>
				</headerToolbar>
				<core:Fragment fragmentName="ag.agasown.view.fragment.SocialCarousel" type="XML" />
			</Panel>

			<Panel id="panelSale" backgroundDesign="Transparent" class="sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title text="Most sale Item" level="H3" titleStyle="H2" class="sapUiMediumMarginTopBottom"/>
					</Toolbar>
				</headerToolbar>
				<Carousel height="auto" pages="{path: 'oDataProducts>/',
                        filters: [{path: 'ranking', operator: 'EQ', value1: '3'}],
                        sorter: {path: 'id'}}">
					<customLayout>
						<CarouselLayout visiblePagesCount="{view>/pagesCount}" />
					</customLayout>

					<VBox height="100%">
						<Image src="{
											path: 'oDataProducts>picture',
											formatter : '.formatter.jsonPictureUrl'
											}" width="100%" class="imageDisplayBlock" press="onProductItemPress"/>
						<HBox height="100%" class="sapUiSmallMargin" alignItems="Center">
							<VBox>
								<Title text="{oDataProducts>product_name}" wrapping="true" />
								<HBox justifyContent="SpaceBetween" alignItems="Baseline">
									<Button tooltip="{i18n>addToCart}" press=".onAddToCart" icon="sap-icon://cart-3" type="Emphasized"/>
									<ObjectListItem class="welcomePrice" number="{
											parts:[
												{path:'oDataProducts>unit_price'},
												{path:'view>/Currency'}
											],
											type:'sap.ui.model.type.Currency',
											formatOptions:{showMeasure: false}
										}" numberUnit="{view>/Currency}">
									</ObjectListItem>
								</HBox>
							</VBox>
						</HBox>
					</VBox>
				</Carousel>
			</Panel>

			<Panel headerText="News letter" class="sapUiDemoFlexBoxSizeAdjustments">
				<FlexBox class="columns">
					<Image src="{
							path: 'view>/welcomeNews',
							formatter : '.formatter.pictureUrl'
						}" width="100%" height="100%">
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0" backgroundDesign="Solid" styleClass="sapUiTinyMargin" />
						</layoutData>
					</Image>
					<VBox>
						<Text text="Newsletter-Lesser sind immer up to date"/>

						<Input id="passwordInput" type="Email" placeholder="Enter Email" />
						<Button type="Accept" text="Subscribe" width="100%" press="onPress"/>

						<Text text="Newsletter von Agasown. Abmelden ist jederzeit möglich"/>
						<Link text="Datenschutzerklärung" press="handleLinkPress" />
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0" backgroundDesign="Solid" styleClass="sapUiTinyMargin" />
						</layoutData>
					</VBox>

				</FlexBox>
			</Panel>

			<Panel >
				<FlexBox alignItems="Start">
					<List backgroundDesign="Transparent" headerText="Agas own">
						<CustomListItem>
							<VBox class="">
								<Link text="About Us" press="onPressImprint"/>
								<Link text="Contact" press="onPressImprint"/>
								<Link text="Imprint" press="onPressImprint"/>
								<Link text="Terms of Services" press="onPressImprint"/>
								<Link text="Privacy Policy" press="onPressImprint"/>
								<Link text="GDPR" press="onPressImprint"/>
							</VBox>
						</CustomListItem>
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</List>
					<List backgroundDesign="Transparent" headerText="Social">
						<CustomListItem>
							<HBox>
							<Avatar
							displaySize="XS"
							showBorder="true"
							press="onPressFaceBook" class="logo" src="{path: 'view>/facebook',
                        formatter : '.formatter.pictureUrl'
                        }"  />
						<Avatar
							displaySize="XS"
							showBorder="true"
							press="onPressFaceBook" class="logo" src="{path: 'view>/pinterest',
                        formatter : '.formatter.pictureUrl'
                        }"  />
						<Avatar
							displaySize="XS"
							showBorder="true"
							press="onPressFaceBook" class="logo" src="{path: 'view>/instagram',
                        formatter : '.formatter.pictureUrl'
                        }"  />
						<Avatar
							displaySize="XS"
							showBorder="true"
							press="onPressFaceBook" class="logo" src="{path: 'view>/youtube',
                        formatter : '.formatter.pictureUrl'
                        }"  />
							</HBox>
						</CustomListItem>
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</List>

					<List backgroundDesign="Transparent" headerText="Categories" items="{
                        path: 'oDataCategory>/',
                        filters: [{path: 'parent', operator: 'EQ', value1: null}],
                        sorter: {path: 'id'}
                    }">
						<CustomListItem>
							<HBox>
								<VBox class="">
									<Link text="{oDataCategory>category_name}" press="onCategoryLinkPress"/>
								</VBox>
							</HBox>
						</CustomListItem>
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</List>
				</FlexBox>
			</Panel>
		</content>
	</Page>
</mvc:View>