<mvc:View xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	xmlns:f="sap.f" controllerName="ag.agasown.controller.Customer"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Page id="productDetail" showNavButton="true" navButtonPress="onNavBack">
		<customHeader>
			<core:Fragment fragmentName="ag.agasown.view.fragment.Header" type="XML" />
		</customHeader>
		<content class="customer_details_page">
			<HBox class="sapUiLargeMargin cus_layout">
				<VBox class="sideNav">
					<Text class="sideNavText" text="{i18n>yourAcc}"></Text>
					<Button class="sideNavBtn" app:fragmentName="Overview" text="{i18n>overView}" id="overview" press="onCustomerNavigationSelect" type="Unstyled" ></Button>
					<Button class="sideNavBtn" app:fragmentName="Order" text="{i18n>order}" id="order" press="onCustomerNavigationSelect" type="Unstyled"></Button>
					<Button class="sideNavBtn" app:fragmentName="Wishlist" text="{i18n>wishlist}" id="wishlist" press="onCustomerNavigationWishlistSelect" type="Unstyled"></Button>
					<Button class="sideNavBtn" app:fragmentName="Vouchers" text="{i18n>vouchers}" id="vouchers" press="onCustomerNavigationSelect" type="Unstyled"></Button>
					<Button class="sideNavBtn" app:fragmentName="PersonalDetails" text="{i18n>persDeta}" id="personalDetails" press="onCustomerNavigationSelect" type="Unstyled"></Button>
					<Text class="sideNavText" text="{i18n>more}"></Text>
					<Button class="sideNavBtn" app:fragmentName="HelpFaq" text="{i18n>help}" id="helpFaq" press="onCustomerNavigationSelect" type="Unstyled"></Button>
					<Button class="sideNavBtn" app:fragmentName="ContactUs" text="{i18n>contactUs}" id="contactUs" press="onCustomerNavigationSelect" type="Unstyled"></Button>
				</VBox>
				<Panel id="customerContent" class="test123"  >
					<HBox>
						<VBox class="sapUiSmallMargin bcEF" >
							<Text class="overviewHeaderBolds" text="Checkout" />
							<List delete=".onCartEntriesDelete"   items="{

					path : 'oDataProducts>/cartEntries',
					sorter : {
						path : 'Name',
						descending : false,
                  noData : false
					}
				}" noDataText="{i18n>noProds}">
								<CustomListItem class="bcEF1" width="100%">
									<HBox>
										<Text text="`${oDataProducts}`" />
									</HBox>
									<HBox class="sapUiSmallMargin overallHBox" justifyContent="SpaceBetween" alignItems="Center">
										<VBox class="avatarVBox">
											<Avatar displaySize="S" src="{
							path : 'oDataProducts>picture',
							formatter : '.formatter.picture'
						}" class="avatar"/>
										</VBox>
										<VBox class="detailsSec">
											<Label text="{oDataProducts>product_name}" class="product_title"/>
											<Text class="product_color" text="{oGlobalModel>/detailProduct/color}"/>
											<Text class="product_dimension" text="{oGlobalModel>/detailProduct/size}"/>
											<HBox class="tryIt">
												<Button class="specialButtons" icon="sap-icon://delete" press="" type="Unstyled" />
												<Label class="buttonTexts" text="{i18n>remove}"/>
												<Button class="specialButtons" icon="sap-icon://heart-2" press="" type="Unstyled" />
												<Label class="buttonTexts" text="{i18n>addToWish}"/>
											</HBox>
										</VBox>
										<VBox class="addDetailsSec">
											<Text text="{oDataProducts>Quantity}" class="product_quantity"/>
											<ObjectNumber number="{
						parts:[{path:'oDataProducts>price'},{path:'view>/Currency'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}" class="product_price"/>
											<Text text="{i18n>discountText}" class="price_discount"/>
										</VBox>
									</HBox>
								</CustomListItem>
							</List>
						</VBox>
					</HBox>
				</Panel>
			</HBox>
		</content>
		<Panel class="fotter">
			<core:Fragment fragmentName="ag.agasown.view.fragment.Footer" type="XML" />
		</Panel>
	</Page>
</mvc:View>