<mvc:View xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f" controllerName="ag.agasown.controller.Customer">
	<Page id="productDetail" showNavButton="true" navButtonPress="onNavBack">
		<customHeader>
			<core:Fragment fragmentName="ag.agasown.view.fragment.Header" type="XML" />
		</customHeader>
		<content>
			<Panel headerText="Customer Registration" class="sapUiNoContentPadding">
				<headerToolbar>

				</headerToolbar>
				<l:VerticalLayout class="sapUiContentPadding" width="100%">
					<FlexBox direction="Column" width="100%">
						<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center" class="sapUiSmallMargin">

						</VBox>
						<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
							<Label text="First Name" labelFor="customerfNameInput" />
							<Input id="customerfNameInput" placeholder="First Name"></Input>

							<Label text="Last Name" labelFor="customerlNameInput" />
							<Input id="customerlNameInput" placeholder="Last Name"></Input>


							<Button width="12rem" text="Login" type="Emphasized" press="onCustomerSubmit"></Button>
						</VBox>
                        <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center" class="sapUiSmallMargin">

						</VBox>
						<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
                            <Text text="customer payment list" />
						
						</VBox>
					</FlexBox>
				</l:VerticalLayout>

			</Panel>
		</content>
		<footer>

		</footer>
	</Page>
</mvc:View>