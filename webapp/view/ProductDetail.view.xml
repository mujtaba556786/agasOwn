<mvc:View xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f" controllerName="ag.agasown.controller.ProductDetail">
	<Page id="productDetail" showNavButton="true" navButtonPress="onNavBack">
		<customHeader>
			<core:Fragment fragmentName="ag.agasown.view.fragment.Header" type="XML" />
		</customHeader>
		<content>
			<Panel class="sapUiNoContentPadding  sapUiTinyMargin">
				
				<HBox justifyContent="SpaceBetween" class="sapUiLargeMarginTop pdpVBox">
					<VBox class="slideshow">
						<HBox class="big">
							<Image id="bigImg" 
							src="{path: 'oGlobalModel>/detailProduct/picture',formatter : '.formatter.jsonPictureUrl'}"
							
							/>
						</HBox>
						<Carousel pages="{oGlobalModel>/detailProduct/product_image}" showPageIndicator="true" class="thumb car-images" loop="true">
							<customLayout>
								<CarouselLayout visiblePagesCount="4" />
							</customLayout>
							<Image class="c-img" src="{path: 'oGlobalModel>image',formatter : '.formatter.jsonPictureUrl'}" press="handleImagePress"/>
						</Carousel>
					</VBox>
					<VBox justifyContent="SpaceAround" class="details_sec">
						<Text class="productName" id="product_name" text="{oGlobalModel>/detailProduct/product_name}"/>
						<HBox class="priceStatusBox" justifyContent="SpaceBetween">
							<Text class="productPrice" id="product_price" text="{oGlobalModel>/detailProduct/price} EUR"/>
							<Text class="productStatus" id="product_status" text="{ path : 'oGlobalModel>/detailProduct', formatter : '.formatter.variantLen' }"/>
						</HBox>
						<HBox alignItems="Baseline">
							<Label text="{i18n>color}" labelFor="product_color" class="des_tilte"/>
							<Link class="loginSignUp sapUiTinyMargin"   id="product_color" text="{ path : 'oGlobalModel>/detailProduct', formatter : '.formatter.variantColor' }" press=".picChange"/>
						</HBox>
						<HBox alignItems="Baseline">
							<Label text="{i18n>dimension}" labelFor="product_dimension" class="des_tilte"/>
							<Text id="product_dimension" text="{oGlobalModel>/detailProduct/size}" />
						</HBox>
						<HBox justifyContent="SpaceBetween" class="mrButtons">
							<HBox class="twoButtons">
								<VBox class="secondBut">
									<StepInput id="defaultValue" value="{/recipient/value}" min="{/recipient/min}" textAlign="Center" max="{/recipient/max}" width="10px" validationMode="{detailView>/validationMode}" change="onChange"/>
								</VBox>
								<VBox class="firstBut" width="10px">
									<!-- <Button type="Transparent" width="200px" class="productCart" text="{i18n>productAddButtonText}" icon="sap-icon://cart" press=".onAddToCartDetails"/> -->
									<Button type="Unstyled" width="200px" class="productCart" text="{i18n>productAddButtonText}" press=".onAddToCartDetails"/>
								</VBox>
							</HBox>
							<VBox >
								<Button class="productFavourite" icon="sap-icon://heart-2" press=".onAddToWishList"/>
							</VBox>
							<!-- <VBox>
								<Button class="productFavourite" icon="sap-icon://delete" press=".onDeleteFromWishList"/>
							</VBox> -->
						</HBox>
						<Button class="productBuyNow" width="100%" type="Unstyled" text="{i18n>buyItNow}" press=".onBuyItNow"/>
						<layoutData>
							<FlexItemData growFactor="1" baseSize="0" backgroundDesign="Solid" styleClass="sapUiTinyMargin" />
						</layoutData>
					</VBox>
				</HBox>
			</Panel>
			<Panel backgroundDesign="Transparent" class="productDescription ">
				<headerToolbar>
					<Toolbar class="des_high">
						<ToolbarSpacer />
						<Title width="50%" text="{i18n>prodDes}" level="H3" titleStyle="H2" class="panelTitle1 sapUiMediumMarginTopBottom"/>
						<Title width="50%" text="{i18n>prodHigh}" level="H3" titleStyle="H2" class="panelTitle1 sapUiMediumMarginTopBottom highli_con"/>
						<ToolbarSpacer/>
					</Toolbar>
				</headerToolbar>
				<HBox>
					<VBox width="50%" class="highlight_css">
						<HBox>
							<Text text="{i18n>proName}" class="proName"/>
						</HBox>
						<HBox>
							<Text text="{oGlobalModel>/detailProduct/product_name}" class="productName"/>
						</HBox>
						<Text id="productDescription" text="{ path : 'oGlobalModel>/detailProduct', formatter : '.formatter.productDescription' }" class="prodDes"/>
					</VBox>
					<VBox width="50%" class="highlight_css">
						<HBox>
							<Text text="{i18n>proHighDet}" class="proName"/>
						</HBox>
						<Text  id="productHighlight" text="{ path : 'oGlobalModel>/detailProduct', formatter : '.formatter.productHighlight' }" class="prodDes"/>
					</VBox>
				</HBox>
			</Panel>
		
			<Panel id="panelPromoted" backgroundDesign="Transparent" class="sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<Title text="{i18n>relatedProd}" level="H3" titleStyle="H2" class="panelTitle sapUiMediumMarginTopBottom"/>
						<ToolbarSpacer/>
					</Toolbar>
				</headerToolbar>
				<Carousel pages="{path: 'oDataProducts>/',
                        filters: [{path: 'ranking', operator: 'EQ', value1: 'promoted'}],
                        sorter: {path: '_id'}}">
					<customLayout>
						<CarouselLayout visiblePagesCount="{view>/pagesCount}" />
					</customLayout>
					<VBox class="sapUiSmallMargin vbox-c-home" alignItems="Center">
						<Image src="{path: 'oDataProducts>picture',formatter : '.formatter.jsonPictureUrl'}" width="100%" height="295px" press="onProductItemPress" />
						<Title text="{oDataProducts>product_name}" wrapping="true" />
						<ObjectNumber class="sapUiSmallMarginBottom" number="{
						parts:[{path:'oDataProducts>price'},{path:'view>/Currency'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}" unit="{view>/Currency}" textAlign="Center"/>
						<Button text="Buy Now" class="btn-abs-home" press="onProductItemPress" />
					</VBox>
				</Carousel>
					<Carousel pages="{
                        path: 'oDataCategory>/',
                        filters: [{path: 'parent', operator: 'EQ', value1: 'None'}],
                        sorter: {path: '_id'}
                    }" showPageIndicator="false" loop="true">
					<customLayout>
						<CarouselLayout visiblePagesCount="{view>/pagesCount}" />
					</customLayout>
					<VBox alignItems="Center" class="sapUiSmallMargin">
							<Image src="{path: 'oDataProducts>picture',formatter : '.formatter.jsonPictureUrl'}" height="155px" press="onProductItemPress"/>
							
							<Title text="{oDataProducts>product_name}" wrapping="true" />
							<ObjectNumber class="sapUiSmallMarginBottom" number="{
						parts:[{path:'oDataProducts>price'},{path:'view>/Currency'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}" unit="{view>/Currency}" textAlign="Center"/>
						</VBox>
				</Carousel>
			</Panel>
			<Panel class="fotter">
				<core:Fragment fragmentName="ag.agasown.view.fragment.Footer" type="XML" />
			</Panel>
		</content>
		<footer>

		</footer>
	</Page>
</mvc:View>