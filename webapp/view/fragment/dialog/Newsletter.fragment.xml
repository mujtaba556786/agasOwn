<core:FragmentDefinition xmlns="sap.m" controllerName="ag.agasown.controller.Registration"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc">
    <Dialog id="NewsLetterDialog" class="NewsLetterDialog" showHeader="false">
        <VBox alignItems="End" class="sapUiSmallMargin ">
            <Button class="dialogCloseBtn" icon="sap-icon://sys-cancel" press=".onNewsLetter" type="Unstyled"/>
        </VBox>
        <VBox fitContainer="true" class="sapUiSmallMargin">
            <Text class="dialogTitle sapUiSmallMarginBottom registrationText" text="{i18n>subsNews}"/>
            <VBox class="div">
                <HBox>
                    <CheckBox text="{i18n>mr_salu}" id="random_id"/>
                    <CheckBox text="{i18n>mrs_salu}"/>
                </HBox>
                <Label class="dialogLabel fnLabel" text="{i18n>FN}" labelFor="firstNameInput" required="true"/>
                <Input id="firstNameInput1" class="fnInput" placeholder="{i18n>FN}" ></Input>
                <Label class="dialogLabel lnLabel" text="{i18n>LN}" labelFor="lastNameInput" />
                <Input id="lastNameInput1" class="lnInput" placeholder="{i18n>LN}" ></Input>
            </VBox>
            <VBox class="div">
                <Label class="dialogLabel emLabel" text="{i18n>mailText}" labelFor="emailInput" />
                <Input id="emailInput1" class="sapUiSmallMarginBottom emInput" type="Email" placeholder="{i18n>mailText}" valueStateText="E-mail must be a valid email address." value="{
							path: '/email',
							type: '.customEMailType'
						}" />
                <CheckBox text="{i18n>TandC}" required="true" id="news_check" selected="true" />
                <!-- <ui5-checkbox text="Readonly" readonly checked></ui5-checkbox> -->

                <Button class="dialogSubmitNew" text="{i18n>subscribe}" type="Unstyled" press="EmailJs"></Button>
            </VBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>