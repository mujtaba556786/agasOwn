<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc">
    <Dialog  class="ForgotDialog" showHeader="false">
        <VBox alignItems="End" class="sapUiSmallMargin">
            <Button class="dialogCloseBtn" icon="sap-icon://sys-cancel" press="onConfirmAddClose" type="Unstyled"/>
        </VBox>
        <VBox fitContainer="true" class="sapUiSmallMargin">
            <Text class="sapUiSmallMarginBottom sapUiLargeMarginBegin" text="{i18n>homeAddConf}" />
            <HBox>
                <Button width="12rem" class="dialogSubmit sapUiSmallMarginEnd" text="{i18n>optYes}" type="Unstyled" press="onSaveHomeAddress"></Button>
                <Button width="12rem" class="dialogSubmit sapUiSmallMarginEnd" text="{i18n>optNo}" type="Unstyled" press="onNotSaveHomeAddress"></Button>
            </HBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>