<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc">
    <HBox justifyContent="SpaceBetween" class="footer-hbox desktop-view-footer">
        <HBox class="sapUiSmallMarginTopBottom f-img-wrap">
            <Image class="fotterImage" src="{path: 'view>/welcomeLogoVertical',
                        formatter : '.formatter.pictureUrl'
                        }" press="onNavBackHome">
            </Image>
        </HBox>
        <VBox class="fotterLink">
            <Text text="{i18n>FooterInfo}" class="sapUiSmallMarginTopBottom"/>
            <Link class="link" text="{i18n>aboutUs}" press="onPressAboutUs" />
            <Link class="link" text="{i18n>contact}" press="onPressContact" />
            <Link class="link" text="{i18n>imprint}" press="onPressImprint"/>
            <Link class="link" text="{i18n>Terms}" press="onPressTerms"/>
            <Link class="link" text="{i18n>Privacy}" press="onPressPrivacy"/>
            <Link class="link" text="{i18n>GDPR}" press="onPressGDPR"/>
        </VBox>
        <VBox class="fotterAvatar">
            <Text text="{i18n>FooterSoc}" class="sapUiSmallMarginTopBottom"/>
            <Avatar displaySize="XS" showBorder="false" press="onPressFaceBook" imageFitType="Cover" decorative="true" class="logo" src="{path: 'view>/facebook',
                        formatter : '.formatter.pictureUrl'
                        }" />
            <!--<Avatar displaySize="XS" showBorder="true" press="onPressFaceBook" class="logo" src="{path: 'view>/pinterest',
                        formatter : '.formatter.pictureUrl'
                        }" />-->
            <Avatar displaySize="XS" showBorder="false" press="onPressInstaGram" imageFitType="Cover" decorative="true" src="{path: 'view>/instagram',
                        formatter : '.formatter.pictureUrl'
                        }" />
            <Avatar displaySize="XS" showBorder="false" press="onPressYouTube" class="logo" imageFitType="Cover" decorative="true" src="{path: 'view>/youtube',
                        formatter : '.formatter.pictureUrl'
                        }" />
        </VBox>
        <VBox>
            <Text text="{i18n>FooterCat}" class="sapUiSmallMarginTopBottom"/>
            <VBox class="fotterLink" items="{
                        path: 'oDataCategory>/',
                        filters: [{path: 'parent', operator: 'EQ', value1: 'None'}],
                        sorter: {path: 'id'}
                    }">
                <Link class="link" text="{oDataCategory>category_name}" press="onCategoryLinkPress"/>
            </VBox>
        </VBox>
    </HBox>
</core:FragmentDefinition>