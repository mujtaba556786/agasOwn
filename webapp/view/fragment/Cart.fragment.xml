<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.f" controllerName="ag.agasown.controller.Cart"
	xmlns:core="sap.ui.core">
	<Popover contentWidth="20%" showArrow="false" showHeader="false" id="myCart" placement="Left" class="productCartdata">
		<List delete=".onCartEntriesDelete" id="entryList" items="{

					path : 'oDataProducts>/cartEntries',
					sorter : {
						path : 'Name',
						descending : false
					}
				}" noDataText="{i18n>cartNoData}">
			<CustomListItem>
				<HBox class="sapUiSmallMargin prodductDet" justifyContent="SpaceBetween" alignItems="Center">
					<Avatar displaySize="M" src="{
							path : 'oDataProducts>picture',
							formatter : '.formatter.jsonPictureUrl'
						}"  class="productIm"/>
					<VBox class="productQN">
						<Text text="{oDataProducts>Quantity} x" class="productQuant"/>
						<Label text="{oDataProducts>product_name}" class="productNam"/>
					</VBox>
					<ObjectNumber number="{
						parts:[{path:'oDataProducts>price'},{path:'view>/Currency'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}" unit="{view>/Currency}" class="productPri"/>
				</HBox>
				<HBox class="sapUiSmallMargin productBut" justifyContent="SpaceBetween" alignItems="Center">
					<Button class="cartButton" icon="sap-icon://favorite" type="Unstyled" />
					<Button class="cartButton" icon="sap-icon://delete" type="Unstyled" />
				</HBox>
			</CustomListItem>
		</List>
		<HBox class="sapUiSmallMargin productCheck" justifyContent="SpaceBetween" alignItems="Center">
			<Button class="cartButtonCheckOut" text="Go To Checkout" press="onNavToCheckout" type="Unstyled" />
			<Text text="{path : 'oDataProducts>/cartEntries',
						formatter : '.formatter.totalPrice'
					} EUR" class="productPr"/>
		</HBox>
	</Popover>
</core:FragmentDefinition>