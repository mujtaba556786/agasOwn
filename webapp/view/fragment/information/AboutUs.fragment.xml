<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
  <HBox>
    <VBox backgroundDesign="Solid" class="sapUiSmallMargin centerVBox">
      <l:VerticalLayout class="sapUiContentPadding">
        <l:content>
          <core:HTML content='&lt;video loop=&quot;loop&quot; autoplay=&quot;autoplay&quot; muted=&quot;muted&quot; src=&quot;{i18n>aboutUsVideo}&quot;
       
       &lt;/video&gt;'>
          </core:HTML>
        </l:content>
      </l:VerticalLayout>

      <Text text="{i18n>aboutUsHeader}" class="AboutUs"/>
      <Text text="{i18n>aboutUsContent}" class="AboutUs_text"/>
    </VBox>
  </HBox>
</core:FragmentDefinition>