<core:FragmentDefinition xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:core="sap.ui.core"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
  <HBox>
    <VBox backgroundDesign="Solid" class="sapUiSmallMargin centerVBox">
    	<FormattedText htmlText='{i18n>aboutUsVideo}'/>
      <Image src="{
											path: 'view>/AboutUs',
											formatter : '.formatter.pictureUrl'
											}" width="100%" height="100%" class="aboutUs"/>
      <Text text="{i18n>aboutUsHeader}" class="AboutUs"/>
      <Text text="{i18n>aboutUsContent}" class="AboutUs_text"/>
    </VBox>
    <VBox visible="false" backgroundDesign="Solid" class="categories sapUiSmallMargin lastVBox">
      <Image src="{
											path: 'view>/Jewel',
											formatter : '.formatter.pictureUrl'
											}" width="100%" height="100%" class="aboutUs mt4"/>
      <Text text="Check our latest products" class="latestProducts"/>
      <Button width="100%" class="continue_shopping" text="{i18n>contShop}" press=".onContinueShopping" type="Unstyled" />
    </VBox>
  </HBox>
</core:FragmentDefinition>