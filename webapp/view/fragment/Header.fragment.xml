<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Bar class="headerBar">
        <contentLeft>
            <Button class="icon" icon="sap-icon://menu2" press=".onShowCategories"/>
        </contentLeft>
        <contentMiddle >
          <Image src="{path: 'view>/welcomeLogo',
                        formatter : '.formatter.pictureUrl'
                        }" press="onNavBackHome">
            </Image>
        </contentMiddle>
        <contentRight>
            <Button id="goToCart" class="icon" icon="sap-icon://cart" press=".onToggleCart"/>
            <Button type="" class="icon" icon="sap-icon://customer" press=".onLoginOpen"/>
        </contentRight>
    </Bar>
</core:FragmentDefinition>