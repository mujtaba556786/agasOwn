<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Bar class="headerBar ">
        <contentLeft >
            <Button class="icon sapUiLargeMarginBegin" icon="sap-icon://menu2" press=".onShowCategories"/>
        </contentLeft>
        <contentMiddle >
     
                
          <Image class="header-img"  src="{path: 'view>/welcomeLogo',
                        formatter : '.formatter.pictureUrl'
                        }" press="onNavBackHome">
            </Image>
        
        </contentMiddle>
        <contentRight>
            <Button id="goToCart" class="icon" icon="sap-icon://cart" press=".onToggleCart"/>
            <Button  class="icon  sapUiLargeMarginEnd" icon="sap-icon://customer" press=".onLoginOpen"/>
        </contentRight>
    </Bar>
</core:FragmentDefinition>