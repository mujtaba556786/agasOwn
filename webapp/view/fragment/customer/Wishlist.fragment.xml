<core:FragmentDefinition xmlns="sap.m"
   xmlns:f="sap.f" 
   controllerName="ag.agasown.controller.Customer"
   xmlns:cssgrid="sap.ui.layout.cssgrid"
   xmlns:app ="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
   xmlns:core="sap.ui.core">
   <f:GridList id="gridList" items="{wish>/}" growing="true" growingThreshold="4">
      <f:customLayout>
         <cssgrid:GridBasicLayout gridAutoRows="5rem" gridTemplateColumns="repeat(auto-fill, minmax(9rem, 1fr))" gridGap="0.5rem"></cssgrid:GridBasicLayout>
      </f:customLayout>
      <f:GridListItem>
         <f:layoutData>
            <cssgrid:GridItemLayoutData gridRow="span 3" gridColumn="span 2" />
         </f:layoutData>
         
         <VBox class="slideshow1">
          <VBox alignItems="End" class="sapUiSmallMargin">
            
        </VBox>
            <Carousel  showPageIndicator="true" class="thumb car-images" loop="true">
               <customLayout>
               
                  <CarouselLayout visiblePagesCount="4" />
               </customLayout>
              
               <VBox alignItems="Center" class="sapUiSmallMargin vbox-c-home" >
              
                  <HBox>
                     <Image src="{path: 'wish>picture',formatter : '.formatter.jsonPictureUrl'}" height="155px" press="onProductItemPress"/>
                  </HBox>
                  <Title text="{wish>product_name}" wrapping="true" />
                  <ObjectNumber class="sapUiSmallMarginBottom" number="{
						parts:[{path:'wish>price'},{path:'wish>/Currency'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}" unit="{wish>/Currency}" textAlign="Center"/>
                  <Button text="{i18n>BuyNow}" class="btn-abs-home" press="onProductItemPress" />
                  <Button class="dialogCloseBtn newDialogCloseBtn" icon="sap-icon://delete" press=".onAddToWishListDel" type="Unstyled" app:itemId="{wish>_id}"/>
               </VBox>
            </Carousel>
         </VBox>
         
      </f:GridListItem>
   </f:GridList>
</core:FragmentDefinition>