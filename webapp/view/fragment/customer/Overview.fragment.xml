   <HBox>
      <VBox class="sapUiSmallMargin bcEF">
         <Text class="overviewHeaderBolds" text="Checkout" />
         <List delete=".onCartEntriesDelete"   items="{

					path : 'oDataProducts>/cartEntries',
					sorter : {
						path : 'Name',
						descending : false,
                  noData : false
					}
				}" noDataText="You have not purchased any products yet">
            <CustomListItem class="bcEF">
               <HBox>
                  <Text text="`${oDataProducts}`" />
               </HBox>
               <HBox class="sapUiSmallMargin overallHBox" justifyContent="SpaceBetween" alignItems="Center">
               <VBox class="avatarVBox">
                  <Avatar displaySize="S" src="{
							path : 'oDataProducts>picture',
							formatter : '.formatter.picture'
						}" class="avatar"/>
                  </VBox>
                  <VBox class="detailsSec">
                     <Label text="{oDataProducts>product_name}" class="product_title"/>
                     <Text class="product_color" text="{oGlobalModel>/detailProduct/color}"/>
                     <Text class="product_dimension" text="{oGlobalModel>/detailProduct/size}"/>
                     <HBox class="tryIt">
                        <Button class="specialButtons" icon="sap-icon://delete" press="" type="Unstyled" />
                        <Label class="buttonTexts" text="Remove |"/>
                        <Button class="specialButtons" icon="sap-icon://heart-2" press="" type="Unstyled" />
                        <Label class="buttonTexts" text=" Add to wishlist"/>
                     </HBox>

                  </VBox>
                  <VBox class="addDetailsSec">
                  <Text text="{oDataProducts>Quantity}" class="product_quantity"/>
                  <ObjectNumber number="{
						parts:[{path:'oDataProducts>price'},{path:'view>/Currency'}],
						type: 'sap.ui.model.type.Currency',
						formatOptions: {showMeasure: false}
					}" class="product_price"/>
               <Text text="You save 10%" class="price_discount"/>
               </VBox>
               </HBox>
               
            </CustomListItem>
         </List>
      </VBox>
