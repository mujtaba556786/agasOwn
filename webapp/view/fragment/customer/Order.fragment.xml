   <HBox>
      <VBox class="sapUiSmallMargin bcEF">
         <Text class="overviewHeaderBolds" text="Your Orders" />
         <List delete=".onCartEntriesDelete"   items="{
					path : 'oDataProducts>/cartEntries',
					sorter : {
						path : 'Name',
						descending : false,
                  noData : false
					}
				}" noDataText="{i18n>cartNoData}">
            <CustomListItem class="bcEF">
               <HBox>
                  <Text text="`${oDataProducts}`" />
               </HBox>
               <HBox class="sapUiSmallMargin overallHBox" justifyContent="SpaceBetween" alignItems="Center">
               <VBox class="avatarVBox">
                  <Avatar displaySize="S" src="{
							path : 'oDataProducts>picture',
							formatter : '.formatter.picture'
						}" class="avatar"/>
                  </VBox>
                  <VBox class="detailsSec">
                     <Label text="{oDataProducts>product_name}" class="product_title"/>
                     <Text class="product_color" text="{oGlobalModel>/detailProduct/color}"/>
                     <Text class="product_dimension" text="{oGlobalModel>/detailProduct/size}"/>
                     <HBox class="tryIt">
                        <Button class="specialButtons" icon="sap-icon://delete" press="" type="Unstyled" />
                        <Label class="buttonTexts" text="{i18n>remove}"/>
                        <Button class="specialButtons" icon="sap-icon://heart-2" press="" type="Unstyled" />
                        <Label class="buttonTexts" text="{i18n>addToWish}"/>
                     </HBox>
                     

                  </VBox>
                  <VBox class="addDetailsSec">
                  <Text text="{oDataProducts>Quantity}" class="product_quantity"/>
                  <Text text="{path : 'oDataProducts>/cartEntries',
						formatter : '.formatter.totalPrice'
					}" class="product_price"/>
               <Text text="{i18n>dispatchedText}" class="price_discount"/>
               </VBox>
               </HBox>
               
            </CustomListItem>
         </List>
      </VBox>
      <VBox visible="false" backgroundDesign="Solid" class="proImage">
               <Image src="{
											path: 'view>/Jewel',
											formatter : '.formatter.pictureUrl'
											}" width="100%" height="100%" class="aboutUs mt4"/>

               <Text text="Check our latest products" class="latestProducts"/>
               <Button width="50%" class="continue_shopping continueShopping" text="Continue Shopping" press=".onContinueShopping" type="Unstyled" />
            </VBox>
   </HBox>

</core:FragmentDefinition>