<core:FragmentDefinition xmlns="sap.m"
   xmlns:f="sap.f"
   xmlns:core="sap.ui.core">
   <VBox class="VBox_PD">
      <Text class="overviewHeader" text="Personal Details"/>

      <VBox class="topBottom">
         <HBox class="semifinal">
            <Button type="Unstyled" class="menu sapUiLargeMarginEnd" icon="sap-icon://customer" press=".offLoginOpen" />
            <VBox class="distance">
               <Text text="First Name"/>
               <Input editable="false" value='oData[email]'/>
            </VBox>
            <VBox class="distance">
               <Text text="Last Name" class="testone"/>
               <Input editable="false" value="Haruds" class="testtwo"/>
            </VBox>
         </HBox>
         <HBox class="final">
            <VBox class="distance">
               <Text text="Date of Birth"/>
               <Input editable="false" value="16.07.1982"/>
            </VBox>
            <VBox class="distance">
               <Text type="Tel" text="Mobile Number"/>
               <Input editable="false" value="01765550985"/>
            </VBox>
            <Button width="100%" class="baton" text="Edit" press=".onEditPersonalDetails" type="Unstyled" />
         </HBox>
      </VBox>
      <VBox class="topBottom">
         <HBox>
            <Button type="Unstyled" class="menu sapUiLargeMarginEnd" icon="sap-icon://email" press=".offLoginOpen" />
            <VBox class="email_left">
               <Text type="Email" text="E-Mail"/>
               <Input editable="false" value="test@gmail.com"/>
            </VBox>
            <Button width="100%" class="baton EditButton" text="Edit" press=".onEditPersonalDetails" type="Unstyled" />
         </HBox>
      </VBox>
      <VBox class="topBottoms">
         <HBox>
            <Button type="Unstyled" class="menu sapUiLargeMarginEnd" icon="sap-icon://locked" press=".offLoginOpen" />
            <VBox class="email_left">
               <Text text="Password"/>
               <Input type="password" editable="false" value=""/>
            </VBox>
            <Button width="100%" class="baton EditButton" text="Edit" press=".onEditPersonalDetails" type="Unstyled" />
         </HBox>
      </VBox>
   </VBox>
</core:FragmentDefinition>