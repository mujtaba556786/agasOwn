<core:FragmentDefinition xmlns="sap.m"
   xmlns:f="sap.f"
   xmlns:core="sap.ui.core">
   <VBox class="VBox_PD">
      <Text class="overviewHeader" text="{i18n>persDeta}"/>
      <VBox class="topBottom">
         <HBox class="final semi">
            <Button type="Unstyled" class="menu sapUiLargeMarginEnd" icon="sap-icon://customer" press=".offLoginOpen" />
            <VBox class="distance">
               <Text text="{i18n>FN}" class="testone"/>
               <Input class = "checkVal" editable="false" value='{oGlobalModel>/customerModel/first_name}'/>
            </VBox>
            <VBox class="distance">
               <Text text="{i18n>LN}" class="testone"/>
               <Input editable="false" value="{oGlobalModel>/customerModel/last_name}" class="checkVal"/>
            </VBox>
         </HBox>
         <HBox class="final">
            <VBox class="distance">
               <Text text="{i18n>DOB}"/>
               <Input editable="false" class = "checkVal" value="{oGlobalModel>/customerModel/birthDay}"/>
            </VBox>
            <VBox class="distance">
               <Text type="Tel" text="{i18n>mobNum}"/>
               <Input editable="false" class = "checkVal" value="{oGlobalModel>/customerModel/phone}"/>
            </VBox>

         </HBox>
      </VBox>
      <VBox class="topBottom">
         <HBox class="final semi">
            <Button type="Unstyled" class="menu sapUiLargeMarginEnd" icon="sap-icon://email" press=".offLoginOpen" />
            <VBox class="email_left">
               <Text type="e-mail" text="{i18n>Loginemail}"/>
               <Input editable="false" class = "check" value="{oGlobalModel>/customerModel/email}"/>
            </VBox>
         </HBox>
      </VBox>
      <VBox class="topBottoms">
         <HBox class="final semi">
            <Button type="Unstyled" class="menu sapUiLargeMarginEnd" icon="sap-icon://locked" press=".offLoginOpen" />
            <VBox class="email_left">
               <Text text="{i18n>Loginpass}"/>
               <Input type="password" class = "check" editable="false" value="{oGlobalModel>/customerModel/password}"/>
            </VBox>
         </HBox>
      </VBox>
      <Button class="baton" text="{i18n>editText}" press=".onEditPersonalDetails" type="Unstyled" />
   </VBox>
</core:FragmentDefinition>