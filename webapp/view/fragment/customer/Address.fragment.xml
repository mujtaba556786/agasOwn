<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <l:VerticalLayout id="addressVerticalLayout" width="100%">
        <l:BlockLayout id="addressLayout">
            <l:BlockLayoutRow>
                <l:BlockLayoutCell title="{i18n>homeAddressTitle}">
                    <VBox renderType="Bare" displayInline="true" fitContainer="true">
                        <Text text="{i18n>custAddress}" />
                        <Input id="address1" editable="false" value='{oGlobalModel>/customerModel/address1}'/>
                        <Text text="{i18n>custCity}" />
                        <Input id="city" editable="false" value='{oGlobalModel>/customerModel/city}'/>
                        <Text text="{i18n>custPostalCode}"/>
                        <Input id="postalCode" editable="false" value='{oGlobalModel>/customerModel/postal_code}' type="number"/>
                        <Text text="{i18n>custCountry}" />
                        <Input id="country" editable="false" value='{oGlobalModel>/customerModel/country}'/>
                        <Button id="btnEditHmAdrs" visible="true" class="buttonEdit" text="{i18n>editText}" press=".onEditHomeAddress" type="Unstyled" />
                        <Button id="btnSaveHmAdrs" visible="false" class="buttonSave" text="{i18n>save}" press=".onSaveHomeAddress" type="Unstyled" />
                    </VBox>

                </l:BlockLayoutCell>
                <l:BlockLayoutCell title="{i18n>billingTitle}">
                    <VBox renderType="Bare" displayInline="true" fitContainer="true">
                        <Text text="{i18n>custAddress}" />
                        <Input id="billingAddress" editable="false" value='{oGlobalModel>/customerModel/billing_address}'/>
                        <Text text="{i18n>custCity}" />
                        <Input id="billingCity" editable="false" value='{oGlobalModel>/customerModel/billing_city}'/>
                        <Text text="{i18n>custPostalCode}"/>
                        <Input id="billingPostalCode" editable="false" value='{oGlobalModel>/customerModel/billing_postal_code}'/>
                        <Text text="{i18n>custCountry}"/>
                        <Input id="billingCountry" editable="false" value='{oGlobalModel>/customerModel/billing_country}'/>
                        <Button id="btnEditblngAdrs" visible="true" class="buttonEdit" text="{i18n>editText}" press=".onEditBillingAddress" type="Unstyled" />
                        <Button id="btnSaveblngAdrs" visible="false" class="buttonSave" text="{i18n>save}" press=".onSaveBillingAddress" type="Unstyled" />
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
        </l:BlockLayout>
    </l:VerticalLayout>
</core:FragmentDefinition>