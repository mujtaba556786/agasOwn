<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <l:VerticalLayout id="addressVerticalLayout" width="100%">
        <l:BlockLayout id="addressLayout">
            <l:BlockLayoutRow>
                <l:BlockLayoutCell title="{i18n>shippingTitle}">
                    <Text text="{i18n>custAddress}" class="testone"/>
                    <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/ship_address}'/>
                    <Text text="{i18n>custCity}" class="testone"/>
                    <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/ship_city}'/>
                    <Text text="{i18n>custPostalCode}" class="testone"/>
                    <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/ship_postal_code}'/>
                    <Text text="{i18n>custCountry}" class="testone"/>
                    <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/ship_country}'/>
                    <Button class="baton" text="{i18n>editText}" press=".onEditShippingAddress" type="Unstyled" />
                </l:BlockLayoutCell>
                <l:BlockLayoutCell title="{i18n>billingTitle}">
                    <Text text="{i18n>custAddress}" class="testone"/>
                    <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/billing_address}'/>
                    <Text text="{i18n>custCity}" class="testone"/>
                    <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/billing_city}'/>
                    <Text text="{i18n>custPostalCode}" class="testone"/>
                    <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/billing_postal_code}'/>
                    <Text text="{i18n>custCountry}" class="testone"/>
                    <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/billing_country}'/>
                    <Button class="baton" text="{i18n>editText}" press=".onEditBillingAddress" type="Unstyled" />
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
        </l:BlockLayout>
    </l:VerticalLayout>
</core:FragmentDefinition>