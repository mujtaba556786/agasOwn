<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <l:VerticalLayout id="addressVerticalLayout" width="100%">
        <l:BlockLayout id="addressLayout">
            <l:BlockLayoutRow>
                <l:BlockLayoutCell title="{i18n>homeAddressTitle}">
                    <VBox renderType="Bare" displayInline="true" fitContainer="true">
                        <Text text="{i18n>custAddress}" class="testone"/>
                        <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/address1}'/>
                        <Text text="{i18n>custCity}" class="testone"/>
                        <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/city}'/>
                        <Text text="{i18n>custPostalCode}" class="testone"/>
                        <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/postal_code}'/>
                        <Text text="{i18n>custCountry}" class="testone"/>
                        <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/country}'/>
                        <Button class="buttonEdit" text="{i18n>editText}" press=".onEditHomeAddress" type="Unstyled" />
                    </VBox>

                </l:BlockLayoutCell>
                <l:BlockLayoutCell title="{i18n>billingTitle}">
                    <VBox renderType="Bare" displayInline="true" fitContainer="true">
                        <Text text="{i18n>custAddress}" class="testone"/>
                        <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/billing_address}'/>
                        <Text text="{i18n>custCity}" class="testone"/>
                        <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/billing_city}'/>
                        <Text text="{i18n>custPostalCode}" class="testone"/>
                        <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/billing_postal_code}'/>
                        <Text text="{i18n>custCountry}" class="testone"/>
                        <Input class="checkVal" editable="false" value='{oGlobalModel>/customerModel/billing_country}'/>
                        <Button class="buttonEdit" text="{i18n>editText}" press=".onEditBillingAddress" type="Unstyled" />
                    </VBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
        </l:BlockLayout>
    </l:VerticalLayout>
</core:FragmentDefinition>