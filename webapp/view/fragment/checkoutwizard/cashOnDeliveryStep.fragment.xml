<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <form:SimpleForm editable="true" layout="ResponsiveGridLayout" class="deliveryAddress_form">
        <VBox class="form_data">
            <Label text="{i18n>checkoutCodFirstName}" required="true" labelFor="cashOnDeliveryName">
                <layoutData>
                    <layout:GridData span="XL4 L4 M4 S12" />
                </layoutData>
            </Label>
            <Input id="cashOnDeliveryName" placeholder="{i18n>firstNameText}" value="{ path: '/CashOnDelivery/FirstName', type: 'sap.ui.model.type.String', constraints: { minLength: 4 } }" change="checkCashOnDeliveryStep" liveChange="checkPaypalUserName">
                <layoutData>
                    <layout:GridData span="XL8 L8 M8 S12" />
                </layoutData>
            </Input>
            <Label text="{i18n>checkoutCodLastName}" labelFor="cashOnDeliveryLastName" required="true">
                <layoutData>
                    <layout:GridData span="XL4 L4 M4 S12" />
                </layoutData>
            </Label>
            <Input id="cashOnDeliveryLastName" placeholder="{i18n>lastNameText}" value="{ path: '/CashOnDelivery/LastName', type: 'sap.ui.model.type.String', constraints: { minLength: 4 } }" change="checkCashOnDeliveryStep" liveChange="checkPaypalUserLastName">
                <layoutData>
                    <layout:GridData span="XL8 L8 M8 S12" />
                </layoutData>
            </Input>
            <Label text="{i18n>checkoutCodPhone}" labelFor="cashOnDeliveryPhoneNumber" required="true">
                <layoutData>
                    <layout:GridData span="XL4 L4 M4 S12" />
                </layoutData>
            </Label>
            <Input id="cashOnDeliveryPhoneNumber" placeholder="{i18n>phoneNumberText}" value="{ path: '/CashOnDelivery/PhoneNumber', type: 'sap.ui.model.type.String', constraints: { minLength: 10,maxLength:10, search: '^[(0-9+]+[)\\s]?[0-9\\/\\s]+$' } }" change="checkCashOnDeliveryStep" liveChange="checkPaypalUserPhoneNumber">
                <layoutData>
                    <layout:GridData span="XL8 L8 M8 S12" />
                </layoutData>
            </Input>
            <Label text="{i18n>checkoutCodEmail}" labelFor="cashOnDeliveryEmail" required="true">
                <layoutData>
                    <layout:GridData span="XL4 L4 M4 S12" />
                </layoutData>
            </Label>
            <Input id="cashOnDeliveryEmail" placeholder="{i18n>emailAddressText}" value="{ path: '/CashOnDelivery/Email', type: '.types.email', constraints: { minLength: 4 } }" change="checkCashOnDeliveryStep" type="Email" liveChange="checkPaypalUserEmail">
                <layoutData>
                    <layout:GridData span="XL8 L8 M8 S12" />
                </layoutData>
            </Input>
        </VBox>
    </form:SimpleForm>
</core:FragmentDefinition> 