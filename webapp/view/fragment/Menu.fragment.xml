<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core">
    <ResponsivePopover id="popover" showArrow="false" showHeader="false" class="sapUiPopupWithPadding" placement="Bottom">
        <content>
            <HBox>
                <List items="{
                        path: 'oDataCategory>/',
                        filters: [{path: 'parent', operator: 'EQ', value1: 'None'}],
                        sorter: {path: '_id'}
                    }" class="menu1">
                    <CustomListItem>
                        <HBox alignItems="Center" justifyContent="SpaceBetween">
                            <Link id="menuLinks" class="menuLinks" text="{oDataCategory>category_name}" press="onCategoryLinkPress">
                                <customData>
                                    <core:CustomData key="categoryId" value="{oDataCategory>_id}" writeToDom="true" />
                                </customData>
                            </Link>
                        </HBox>
                    </CustomListItem>
                </List>
                <List items="{oGlobalModel>/detailCategory}" 
                class="sapUiTinyMarginBegin Menu2 second" noData="  ">
                    <CustomListItem>
                        <HBox alignItems="Center" justifyContent="SpaceBetween">
                            <Link class="menuLinks" text="{oGlobalModel>category_name}" press="onSubCategoryLinkPress"/>
                        </HBox>
                    </CustomListItem>
                </List>
            </HBox>
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>